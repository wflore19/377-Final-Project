<%- include("partials/head") %>
<body>
      <div id="page-container">
            <%- include("partials/header") %>

            <main>
                  <section class="hero container">
                        <div id="date"></div>
                        <div class="columns">
                              <div class="col">
                                    <h4>Words to Hold</h4>
                                    <h5>Selected Zen Quotes</h5>
                                    <p>
                                          A small collection of quotes to
                                          inspire practice and reflection.
                                    </p>
                              </div>
                              <div class="col">
                                    <img
                                          src="images/zen_books_rotation_fade_white_hold.gif"
                                          alt="Books"
                                    />
                              </div>
                        </div>
                  </section>

                  <section class="section container">
                        <h2>My Saved Quotes</h2>
                        <% if (savedQuotes && savedQuotes.length > 0) { %>
                        <div>
                              <% savedQuotes.forEach((item) => { %>
                              <div
                                    class="quote"
                                    id="quote-<%= item.quote.id %>"
                              >
                                    <blockquote>
                                          <p>“<%= item.quote.quote %></p>
                                          <cite
                                                >— <%= item.quote.author ||
                                                'Unknown' %></cite
                                          >
                                    </blockquote>
                                    <%- include("components/unlikeButton", {
                                    quoteId: item.quote.id }) %>
                              </div>
                              <% }); %>
                        </div>
                        <% } else if (error) { %>
                        <p class="quote"><%= error %></p>
                        <% } else { %>
                        <p>No saved quotes found.</p>
                        <% } %>
                  </section>
            </main>

            <%- include("partials/footer") %>
      </div>
</body>
